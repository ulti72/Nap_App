<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#323232</item>
        <item name="colorPrimaryDark">#323232</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="SCBSwitch" parent="Theme.Design">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#ffffff</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#ff0000
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#000000
        </item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <!-- Base application theme. -->

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/drawable</item>
    </style>

</resources>
